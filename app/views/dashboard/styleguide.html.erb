<%-
items = Dir[Rails.root.join("app", "items", "*.rb")].map do |type|
  class_name = File.basename(type, ".rb").capitalize
  Object.const_get(class_name).new(class_name)
end
%>

<%- content_for(:title) { "Styleguide" } %>

<section class="main-content">
  <ol class="events timeline-vertical">
    <%- items.each do |item| %>
    <li><%= render partial: "item", object: item %></li>
    <%- end %>
  </ol>

  <%- (1..6).each do |num| -%>
  <h<%= num %>>H<%= num %></h<%= num %>>
  <p>paragraph</p>
  <%- end %>
</section>

<%- content_for(:sidebar) do %>
  <h2>Sidebar</h2>
  <p>paragraph</p>

  <h2 class="heading-with-action">
    <span>Heading with action</span>
    <%= interactive_icon(Icon.add) %>
  </h2>
  <p>paragraph</p>
<%- end %>
