<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> — Future Perfect</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1><%= yield(:title) %></h2>
      <nav>
        <ul>
          <%= render partial: "nav_link", locals: { text: "Past", paths: [timeline_path] } %>
          <%= render partial: "nav_link", locals: { text: "Present & Future", paths: [dashboard_path, root_path] } %>
        </ul>
      </nav>
    </header>

    <main role="main">
      <section class="main-content">
        <%= yield %>
      </section>

      <%- if content_for?(:sidebar) %>
      <section class="sidebar">
        <%= yield(:sidebar) %>
      </section>
      <%- end %>
    </main>

    <footer>
      <p>
        Icons: Font Awesome by Dave Gandy —
        <a href="http://fontawesome.io">http://fontawesome.io</a>
      </p>
      <p>
        Tomato image —
        <a href="https://pixabay.com/en/food-green-health-plant-red-1294019/">Pixabay</a>
      </p>
    </footer>
  </body>
</html>
